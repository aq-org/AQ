// Test function declarations and calls
int add(int x, int y) {
    return x + y;
}

int multiply(int a, int b) {
    return a * b;
}

int factorial(int n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}

void print_number(int num) {
    __builtin_print("Number: ");
    __builtin_print(num);
    __builtin_print("\n");
}

auto main() {
    __builtin_print("=== Function Tests ===\n");
    
    // Test 1: Simple function call
    __builtin_print("\nTest 1: Simple function\n");
    int result = add(5, 3);
    __builtin_print("5 + 3 = ");
    __builtin_print(result);
    __builtin_print("\n");
    
    // Test 2: Multiple function calls
    __builtin_print("\nTest 2: Multiple functions\n");
    int sum = add(10, 20);
    int product = multiply(5, 6);
    __builtin_print("Sum: ");
    __builtin_print(sum);
    __builtin_print("\nProduct: ");
    __builtin_print(product);
    __builtin_print("\n");
    
    // Test 3: Recursive function
    __builtin_print("\nTest 3: Recursion\n");
    int fact = factorial(5);
    __builtin_print("5! = ");
    __builtin_print(fact);
    __builtin_print("\n");
    
    // Test 4: Void function
    __builtin_print("\nTest 4: Void function\n");
    print_number(42);
    
    // Test 5: Nested function calls
    __builtin_print("\nTest 5: Nested calls\n");
    int nested = add(add(1, 2), add(3, 4));
    __builtin_print("(1+2) + (3+4) = ");
    __builtin_print(nested);
    __builtin_print("\n");
    
    __builtin_print("\n=== All Function Tests Passed ===\n");
    return 0;
}
